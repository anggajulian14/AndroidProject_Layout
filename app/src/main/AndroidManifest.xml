        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectLayout"
        tools:targetApi="31">
        <activity
            android:name=".VerticalScrollView"
            android:exported="false" />
        <activity
            android:name=".HorizontalScrollView"
            android:exported="false" />
        <activity
            android:name=".ProjectTable"
            android:exported="false" />
        <activity
            android:name=".ProjectFrame"
            android:exported="false" />
        <activity
            android:name=".ProjectConstraint"
            android:exported="false" />
        <activity
            android:name=".ProjectLinear"
            android:exported="false" />
        <activity
            android:name=".ProjectRelative"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>